<%= flash[:message] %>
<h1>Welcome, <%= @user.name %>!</h1>
<h2>Main Library</h2>

<li><%= link_to "MATCHES", user_matches_path(@user) %></li><br><br>

<h3>Kpop Groups - (all)</h3>

<%= form_tag user_kpopgroups_path, :method => "get" do %>
    <p>
        <%= label_tag(:search, "Find a Group:") %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag("Search", :name => nil) %>
    </p>
<% end %>

<% if @kpopgroups %>
    <%= link_to @kpopgroups.name,  user_kpopgroup_path(@user, @kpopgroups) %><br><br>
<% else %>
    <% @kpopgroups.each do |group| %>
        <%= link_to group.name,  user_kpopgroup_path(@user, group) %><br><br>
    <% end %>
<% end %>







